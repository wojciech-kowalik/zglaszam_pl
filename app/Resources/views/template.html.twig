<title>{% block title %}zglaszam.pl{% endblock %}</title>
{% block stylesheets %}{% endblock %}        
<link rel="stylesheet" type="text/css" media="screen" href="/css/templates/default.css" />
<link rel="stylesheet" type="text/css" media="screen" href="/css/custom-theme/jquery-ui-1.8.20.custom.css" />
<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

<!-- @wk unfortunately Modernizr has to be on top :/ others scripts may be on bottom -->
<script src="{{ asset('/js/modernizr.js') }}" type="text/javascript"></script>
</head>        

<body>

    <div id="main-container">
    
        <!-- Header -->
        
        <header id="header">
    
            <div class="wrapper">                
               {% block top %}{% endblock %}
            </div>

        </header>
        
        <!-- / Header -->
        
        <!-- Content -->
    
        <div class="wrapper">
             
            <section>
                {% if app.session.flash("error") %}
                <div class="ui-widget">
                    <div class="ui-state-error ui-corner-all monit-content">
                        <p><span class="ui-icon ui-icon-alert monit-icon"></span>
                            <span class="monit-text">{{ app.session.flash("error") }}</span>
                        </p>
                    </div>
                </div>
                {% endif %}
                {% if app.session.flash("success") %}
                <div class="ui-widget">
                    <div class="ui-state-highlight ui-corner-all monit-content">
                        <p><span class="ui-icon ui-icon-info monit-icon"></span>
                            {{ app.session.flash("success") }}
                        </p>
                    </div>
                </div>
                {% endif %}    
                
                <section id="dynamic-content">
                    {% block body %}{% endblock %}
                </section>
                
            </section>

        </div>
        
        <!-- / Content -->
    
    </div>
    
    <!-- Footer -->
    
    <footer id="footer">
    
        <div class="wrapper">
                        
            <!-- Copyright -->
            
            <div id="copyright">
                version: {{ vr_version }}_{{ app.session.locale }} &copy; zglaszam.pl {{ "now"|date("Y") }}. Wszelkie prawa zastrzeżone
            </div>   

            <!-- / Copyright -->
    
        </div>
        <div id="dark-bar"></div> 

    </footer>
    
    <!-- / Footer -->

