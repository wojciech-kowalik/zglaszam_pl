    <script type="text/javascript">
        
        $(".postcode").mask("99-999");
        $(".nip").mask("999-999-99-99");
        
        function showCompanyData(type){
         
           if(type == "firm"){
               $("#company-data").removeClass("hidden");
           }else{
               $("#company-data").addClass("hidden");
           }         
            
        }
        
        $("#user_type").on("change", function(){
           showCompanyData($(this).val()); 
        });
        
        showCompanyData($("#user_type").val());
        
        
    </script>



